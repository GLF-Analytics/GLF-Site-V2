<nav class="fixed top-0 w-full z-50 nav-glass nav-shell">
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-16 h-20 flex items-center justify-center">
    <a href="/" class="font-mono text-[11px] tracking-[0.25em] text-white uppercase">
      GLF Analytics
    </a>
  </div>

  <!-- Bottom accent line -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gold-500/20 to-transparent"></div>
</nav>

<script>
  const nav = document.querySelector("nav");

  if (nav) {
    let lastScrollY = window.scrollY;
    let navOffset = 0;
    let navHeight = nav.offsetHeight;
    let ticking = false;

    const updateNav = () => {
      const current = window.scrollY;
      const delta = current - lastScrollY;

      if (current <= 0) {
        navOffset = 0;
      } else {
        navOffset = Math.min(navHeight, Math.max(0, navOffset += delta * 0.6));
      }

      nav.style.transform = `translateY(${-navOffset}px)`;
      lastScrollY = current;
      ticking = false;
    };

    window.addEventListener(
      "scroll",
      () => {
        if (!ticking) {
          window.requestAnimationFrame(updateNav);
          ticking = true;
        }
      },
      { passive: true }
    );

    window.addEventListener("resize", () => {
      navHeight = nav.offsetHeight;
      navOffset = Math.min(navOffset, navHeight);
    });
  }
</script>
