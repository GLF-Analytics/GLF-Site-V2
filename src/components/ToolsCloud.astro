---
const tools = [
  "SQL",
  "BigQuery",
  "Tableau",
  "Looker Studio",
  "GA4",
  "Metabase",
  "GTM",
  "Shopify",
  "Amazon Seller Central",
  "Yotpo",
  "Klaviyo",
  "Ubereats",
  "Doordash",
  "Olo"
];
---
<section id="expertise" class="py-20 px-6 border-b border-white/5 bg-black">
  <div class="max-w-7xl mx-auto">
    <h3 class="text-sm font-medium text-zinc-500 uppercase tracking-widest mb-10 text-center">
      Tools & Platforms We Master
    </h3>
    <div class="flex flex-wrap justify-center gap-3">
      {tools.map((tool) => (
        <span
          class={`px-3 py-1.5 rounded-md border text-xs font-medium ${
            tool === "Shopify"
              ? "border-zinc-700 bg-zinc-800 text-zinc-200"
              : "border-zinc-800 bg-zinc-900/50 text-zinc-400"
          }`}
        >
          {tool}
        </span>
      ))}
    </div>
  </div>
</section>
