---
const tools = [
  "SQL",
  "BigQuery",
  "Tableau",
  "Looker Studio",
  "GA4",
  "Metabase",
  "GTM",
  "Shopify",
  "Amazon Seller Central",
  "Yotpo",
  "Klaviyo",
  "Ubereats",
  "Doordash",
  "Olo"
];
---
<section id="expertise" class="py-20 px-6 border-b border-white/5 bg-black overflow-hidden">
  <div class="tools-carousel">
    <div class="tools-carousel-track">
      {tools.map((tool) => (
        <span class="tools-carousel-item px-3 py-1.5 rounded-md border border-zinc-800 bg-zinc-900/50 text-zinc-400 text-xs font-medium whitespace-nowrap">
          {tool}
        </span>
      ))}
      {tools.map((tool) => (
        <span class="tools-carousel-item px-3 py-1.5 rounded-md border border-zinc-800 bg-zinc-900/50 text-zinc-400 text-xs font-medium whitespace-nowrap" aria-hidden="true">
          {tool}
        </span>
      ))}
    </div>
  </div>
</section>
