---
const tools = [
  "SQL",
  "BigQuery",
  "Tableau",
  "Looker Studio",
  "GA4",
  "Metabase",
  "GTM",
  "Shopify",
  "Amazon Seller Central",
  "Yotpo",
  "Klaviyo",
  "Ubereats",
  "Doordash",
  "Olo"
];
---
<section id="expertise" class="relative py-16 md:py-20 overflow-hidden border-b border-white/[0.06]">
  <!-- Section label -->
  <div class="max-w-7xl mx-auto px-6 md:px-12 lg:px-16 mb-8">
    <span class="label">Tech Stack</span>
  </div>

  <!-- Carousel with fade edges -->
  <div class="relative">
    <!-- Left fade -->
    <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-[#050505] to-transparent z-10 pointer-events-none"></div>
    <!-- Right fade -->
    <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-[#050505] to-transparent z-10 pointer-events-none"></div>

    <div class="tools-carousel">
      <div class="tools-carousel-track">
        {/* First set */}
        {tools.map((tool) => (
          <span class="tools-carousel-item">
            {tool}
          </span>
        ))}
        {/* Duplicate for seamless loop */}
        {tools.map((tool) => (
          <span class="tools-carousel-item" aria-hidden="true">
            {tool}
          </span>
        ))}
        {/* Third set for longer screens */}
        {tools.map((tool) => (
          <span class="tools-carousel-item" aria-hidden="true">
            {tool}
          </span>
        ))}
        {/* Fourth set */}
        {tools.map((tool) => (
          <span class="tools-carousel-item" aria-hidden="true">
            {tool}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
