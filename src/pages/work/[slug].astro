---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("work");
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const backgroundStyle = entry.data.backgroundImage
  ? `background: url('${entry.data.backgroundImage}') top center / cover no-repeat`
  : undefined;
---
<BaseLayout title={entry.data.title} description={entry.data.summary}>
  <article
    class="pt-32 pb-20 px-6 border-b border-white/5"
    style={backgroundStyle}
  >
    <div class="max-w-4xl mx-auto">
      <div class="p-6 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur">
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <span class="text-xs font-mono text-zinc-500 border border-zinc-800 rounded px-2 py-0.5">
            {entry.data.clientType}
          </span>
          <span class="text-xs text-zinc-500">{entry.data.duration}</span>
        </div>
        <h1 class="text-3xl md:text-4xl font-semibold text-white tracking-tight mb-4">
          {entry.data.title}
        </h1>
        <p class="text-sm text-zinc-400 max-w-2xl">{entry.data.summary}</p>
      </div>

      <div class="mt-8 grid gap-6 md:grid-cols-2">
        <div class="p-6 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur">
          <h2 class="text-sm font-semibold text-white mb-3">Challenge</h2>
          <p class="text-sm text-zinc-400">{entry.data.challenge}</p>
        </div>
        <div class="p-6 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur">
          <h2 class="text-sm font-semibold text-white mb-3">Solution</h2>
          <p class="text-sm text-zinc-400">{entry.data.solution}</p>
        </div>
      </div>

      <div class="mt-8 p-6 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur">
        <h2 class="text-sm font-semibold text-white mb-3">Outcomes</h2>
        {Array.isArray(entry.data.outcomes) ? (
          <ul class="space-y-2 text-sm text-zinc-400">
            {entry.data.outcomes.map((outcome) => (
              <li>• {outcome}</li>
            ))}
          </ul>
        ) : (
          <p class="text-sm text-zinc-400">{entry.data.outcomes}</p>
        )}
      </div>

      {entry.data.testimonial ? (
        <div class="mt-8 p-6 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur">
          <h2 class="text-sm font-semibold text-white mb-3">Testimonial</h2>
          <p class="text-sm text-zinc-400 italic">{entry.data.testimonial}</p>
        </div>
      ) : null}

      <div class="mt-8 work-content work-sections">
        <Content />
      </div>

      {entry.data.url ? (
        <div class="mt-8">
          <a
            href={entry.data.url}
            class="inline-flex items-center px-5 py-3 rounded-2xl border border-white/10 bg-zinc-950/70 backdrop-blur text-sm text-zinc-300 hover:text-white transition-colors"
          >
            Visit project site →
          </a>
        </div>
      ) : null}
    </div>
  </article>
</BaseLayout>
